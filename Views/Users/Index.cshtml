</script>*@

<script>
    $(document).ready(function () {
        $("#btn").keyup(function () {
            var s = $("#text").val();
            //console.log(s);
            $.ajax({
                url: "http://localhost:55760/Users/Index",
                contentType="text/html",
                datatype: "HTML",
                data: { search: s },

                succes: function (response) {
                    $("body").html(response)
                },
                error: function () {
                    alert("Try again")
                }

            });


        });

    });


</script>



